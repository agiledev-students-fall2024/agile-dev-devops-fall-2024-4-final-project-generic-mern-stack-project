{
  "name": "back-end",
  "version": "1.0.0",
  "description": "The back-end of your project will live in this directory.",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@firebase/firestore": "^4.7.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "firebase": "^11.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.11.0",
    "mongoose": "^8.8.2"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "chai-http": "^5.1.1",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "frontend": "npm --prefix ./front-end start",
    "backend": "nodemon --prefix ./back-end server.js",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'"
  },
  "nyc": {
    "include": [
      "services/**/*.js",
      "routes/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true
  }
}
